doctype html
html(lang="en")
	head(charset="utf-8")
		title Chisel Test
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", type="text/css", href="../dist/chisel.css")
		link(rel="stylesheet", type="text/css", href="../test/style.css")
	body

		
		.row
			.col.m-6.l-3 Test 1<br />Test 1
			.col.m-6.l-3 Test 2
			.clr-m
			.col.m-6.l-3 Test 3
