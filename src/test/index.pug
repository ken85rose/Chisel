		br
		br
		br

		.table.s-2.m-3.l-4.row
			.cell Block 1<br>Block 1 still
			.cell Block 2
			.cell Block 3
			.cell Block 4
			.cell Block 5
			.cell Block 6

		h1.tc.v 1

		h1.tc.v(data-view=".5") 2

		h1.tc.v 3
		h1.tc.v 4


		#modalId.modal.fixed
			.box
				.x
				.content
					.carousel.fade.gallery
						#slide1.active
							.load
							img(data-src='http://placehold.it/350x350')
						#slide2
							img(data-src='http://placehold.it/150x350')
						#slide3
							img(data-src="http://placehold.it/350x150")
						.previous
						.next
						.buttons
							a.active(data-carousel="slide1")
							a(data-carousel="slide2")
							a(data-carousel="slide3")

								


		script(src="../dist/chisel.js")
		script(src="../test/script.js")